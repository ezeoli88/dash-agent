# OpenAI API Key for AI agent operations
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx

# GitHub Personal Access Token for repository operations
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx

# Base directory where repositories are cloned
REPOS_BASE_DIR=/var/repos

# Directory for git worktrees used by the agent
WORKTREES_DIR=/tmp/agent-worktrees

# Server port
PORT=3000

# Database path (optional, defaults to ./data/agent-board.db)
DATABASE_PATH=./data/agent-board.db

# Log level (optional, defaults to 'info')
LOG_LEVEL=info
